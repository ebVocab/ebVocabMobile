<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/shadow"
              android:padding="5dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nui.search.button"
            android:id="@+id/search_btnSearch"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nui.close"
            android:id="@+id/search_btnClose"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/indiaBlue"
            android:text="nui.search.text.to.find"
            android:id="@+id/search_lbSearch"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/indiaBlue"
            android:background="@color/white"
            android:layout_marginLeft="7dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/search_etSearch"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nui.search.option.case.sensitive"
            android:id="@+id/search_cbCaseSensitive"
            android:textColor="@color/indiaBlue"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nui.search.option.whole.words"
            android:textColor="@color/indiaBlue"
            android:id="@+id/search_cbWholeWords"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nui.search.option.regular.expressions"
            android:textColor="@color/indiaBlue"
            android:id="@+id/search_cbRegEx"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nui.search.option.comments"
            android:textColor="@color/indiaBlue"
            android:id="@+id/search_cbComments"
            />
    </LinearLayout>

    <ListView
        android:layout_height="200dp"
        android:layout_width="fill_parent"
        android:paddingLeft="7dp"
        android:id="@+id/search_lvResult"/>

</LinearLayout>