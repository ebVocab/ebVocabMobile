<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/shadow"
              android:padding="20dp"
    >


    <TextView
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:id="@+id/repetitionLoad_list_label"
        android:text="nui.repetition.load.list.label"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:background="@color/indiaGreen"
        />

    <ListView
        android:layout_height="350dp"
        android:layout_width="800dp"
        android:textSize="24sp"
        android:id="@+id/repetition_load_list"
        android:layout_margin="5dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <Button
            android:textSize="24sp"
            android:id="@+id/repetition_load_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:textSize="24sp"
            android:id="@+id/repetition_load_delete_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:textSize="24sp"
            android:id="@+id/repetition_load_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>